@page
@model PizzaShop.Pages.Login.LoginModel
@{
}
<form method="post">
    <div>
        Username:
        <input type="text" name="userName"></input>
    </div>
    <div>
        Password:
        <input type="text" name="password"></input>
    </div>
    <div>
        <button class="btn btn-outline-info" type="submit" >Login</button>
    </div>
    @if(!string.IsNullOrEmpty(Model.mess))
    {
        <span class="text-danger">@Model.mess</span>
    }
</form>